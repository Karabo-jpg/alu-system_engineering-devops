#!/usr/bin/env bash
# Configures a new Ubuntu machine to set up a 301 redirection in Nginx

# Update package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create the HTML root directory if it doesn't exist
sudo mkdir -p /var/www/html

# Create a simple HTML file for the root
echo "Holberton School" | sudo tee /var/www/html/index.html

# Update the default Nginx configuration to include the redirection
sudo tee /etc/nginx/sites-available/default > /dev/null <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF

# Restart Nginx to apply changes
sudo service nginx restart
