#!/usr/bin/env bash
# This script sets up Nginx with a permanent redirection on /redirect_me

# Update package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Create the redirection configuration in the default Nginx site
sudo bash -c "cat > /etc/nginx/sites-available/default <<EOF
server {
    listen 80 default_server;
    listen [::]:80 default_server;
    root /var/www/html;
    index index.html;

    location / {
        try_files \$uri \$uri/ =404;
    }

    location /redirect_me {
        return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;
    }
}
EOF"

# Restart Nginx to apply changes
sudo service nginx restart

# Check if Nginx is running and verify the redirection
curl -s -o /dev/null -w "%{http_code}\n" http://localhost/redirect_me
