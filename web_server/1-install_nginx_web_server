#!/bin/bash

# Update the package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Start Nginx service without using systemctl
sudo service nginx start

# Configure Nginx to listen on port 80 (this should be the default setting)
sudo ufw allow 'Nginx HTTP'

# Ensure the default Nginx page contains "Holberton School"
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html

# Restart Nginx to ensure configuration is reloaded
sudo service nginx restart
