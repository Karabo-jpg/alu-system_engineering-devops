#!/usr/bin/env bash
# This script installs Nginx, configures it to listen on port 80, and ensures it serves a page containing "Holberton School"

# Update package list and install nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Allow HTTP traffic through the firewall (Port 80)
sudo ufw allow 'Nginx HTTP'

# Create a new HTML page with "Holberton School" content
echo "Holberton School" | sudo tee /var/www/html/index.html

# Ensure nginx is configured to listen on port 80 (this should be default)
# Restart Nginx to apply changes (without using systemctl)
sudo service nginx restart

# Check the Nginx status to confirm it's running
sudo service nginx status

# Confirm Nginx is serving the expected page
curl -s http://localhost

# Nginx installation script for Task 1
