#!/usr/bin/env bash
# This script installs Nginx and configures it to serve a page with the content "Holberton School"

# Step 1: Update the system and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Step 2: Allow HTTP traffic on port 80 through the firewall
sudo ufw allow 'Nginx HTTP'

# Step 3: Start Nginx without using systemctl
sudo service nginx start

# Step 4: Set the content of the index.html page to "Holberton School"
echo "Holberton School" | sudo tee /var/www/html/index.html > /dev/null

# Step 5: Restart Nginx (not using systemctl, using service)
sudo service nginx restart

# Step 6: Output a message confirming the setup
echo "Nginx is installed and the page now contains 'Holberton School'."
