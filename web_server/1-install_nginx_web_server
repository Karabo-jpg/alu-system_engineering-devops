#!/usr/bin/env bash
# This script installs and configures Nginx to serve a page containing "Holberton School".

# Update package list and install nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Allow Nginx HTTP traffic through the firewall
sudo ufw allow 'Nginx HTTP'

# Ensure nginx is started and enabled to run on boot
sudo service nginx start

# Set the index.html file to contain only "Holberton School"
echo "Holberton School" | sudo tee /var/www/html/index.html

# Restart nginx without using systemctl, as per the requirement
sudo service nginx restart

# Output confirmation
echo "Nginx has been installed and the page is serving 'Holberton School'."
