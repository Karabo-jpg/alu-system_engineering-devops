#!/usr/bin/env bash
# This script installs Nginx, configures it to listen on port 80, and ensures it serves a page containing "Holberton School"

# Update the package list and install Nginx
sudo apt-get update -y
sudo apt-get install nginx -y

# Allow HTTP traffic on port 80 through the firewall
sudo ufw allow 'Nginx HTTP'

# Modify the default Nginx page to include "Holberton School"
echo "Holberton School for the win!" | sudo tee /var/www/html/index.html

# Restart Nginx without using systemctl
sudo service nginx restart

# Ensure Nginx is listening on port 80
sudo service nginx status
