#!/usr/bin/env bash
# Install Nginx if not already installed
sudo apt-get update
sudo apt-get install -y nginx

# Create the custom 404 page
sudo mkdir -p /var/www/html
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

# Update the Nginx configuration to use the custom 404 page
sudo sed -i 's|^\tindex index.html;|\tindex index.html;\n\terror_page 404 /404.html;\n\tlocation = /404.html {\n\t\troot /var/www/html;\n\t\tinternal;\n\t}|' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
sudo service nginx restart
